<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <%= f.label :genre_name %>
  <%= f.collection_select :genre_name, Genre.all, :name, :name %>
  <%= f.label :song_notes_1 %>
  <%= f.text_field :song_notes_1 %>
  <%= f.label :song_notes_2 %>
  <%= f.text_field :song_notes_2 %>
  <%= f.label :song_notes_3 %>
  <%= f.text_field :song_notes_3 %>

  <br />

  <%= f.submit %>
<% end %>
